<div class="container">

    <h1>Beer to discover</h1>
    {{#each random}}
    <div class="row">
        
        <div class="col-3"><img class= "image" src="{{image_url}}" alt="{{name}}"></div>
        <div class="col-9">
            <div class="row">
                <div class="col-12">{{name}}</div>
                <div class="col-12">{{description}}</div>
                <div class="col-12">{{tagline}}</div>
                
                <div class="col-12">{{brewers_tips}}</div>
                <div class="col-12">
                    {{#each food_pairing}}
                    <li>{{this}}</li>
                    {{/each}}
                </div>
            </div>
        </div>

    </div>
    {{/each}}
</div>